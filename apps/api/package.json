{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "build": "bun build src/server.ts --target=bun --outdir=dist",
    "start": "bun dist/server.js",
    "test": "DATABASE_URL=./data/nazaritor.test.db bun test",
    "test:watch": "DATABASE_URL=./data/nazaritor.test.db bun test --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "bun ../../packages/database/scripts/migrate.ts",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@repo/database": "workspace:*",
    "@repo/schemas": "workspace:*",
    "@repo/types": "workspace:*",
    "@trpc/server": "^11.0.0-next.0",
    "drizzle-orm": "^0.29.3",
    "hono": "^3.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "drizzle-kit": "^0.20.10",
    "trpc-ui": "^1.0.15",
    "typescript": "^5.3.3"
  }
}
